
<%= form_for @note do |f| %>

<%= f.submit "Save", :class => "btn btn-success" %>

  <div>
    <%= f.label :title  %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <br>
 
  <%= f.text_area :content, :class => "tinymce", :rows => 1, :cols => 1 %>

  <%= f.hidden_field :user_id, value: current_user.id %>
<% end %>

<%= tinymce %>

