<%= form_with model: @task_list, local: true do |form| %>
  <% if  @task_list.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@task_list.errors.count, "error") %>
          prohibited this Board from being saved:
      </h2>
      <ul>
        <% @task_list.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.submit "Save", :class => "btn btn-success btn-sm"%>

  <p>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </p>

  <%= form.hidden_field :user_id, value: current_user.id %>  
<% end %>
